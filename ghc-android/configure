      },
      'i686' => {
         NDK_TOOLCHAIN => 'x86-4.8',
         NDK_TARGET    => 'i686-linux-android',
         NDK_ABI       => 'i686-linux-android',
         ARCH_OPTS     => '',
      },
   },
};
