# XXX: Hack to get Qt closer to being able to build with DBus support.
RUN sed -i -e 's/ -pthread//g' "$SYSROOT/usr/lib/pkgconfig/dbus-1.pc"

COPY --from=build-icu $SYSROOT/usr $SYSROOT/usr
COPY --from=build-sqlcipher $SYSROOT/usr $SYSROOT/usr
COPY --from=build-tslib $SYSROOT/usr $SYSROOT/usr
COPY --from=build-zstd $SYSROOT/usr $SYSROOT/usr

ARG QT_VERSION=6.8.0

RUN tar Jxf <(curl -L "https://download.qt.io/archive/qt/$(echo "$QT_VERSION" | grep -o '...')/$QT_VERSION/submodules/qtbase-everywhere-src-$QT_VERSION.tar.xz") \
 && cd qtbase-everywhere-src-* && mkdir _build && cd _build \
 && ../configure \
    -prefix "$SYSROOT/opt/qt" \
    -qt-doubleconversion \
    -qt-freetype \
    -qt-harfbuzz \
    -qt-libjpeg \
    -qt-libpng \
    -qt-pcre \
    -qt-zlib \
    -static \
    -no-egl \
    -no-glib \
    -no-vulkan \
    -no-feature-brotli \
    -no-feature-printsupport \
    -no-feature-sql \
    -openssl-linked \
    -nomake examples \
    -nomake tests \
    -opengl desktop \
    -xcb \
    -- \
    -DCMAKE_FIND_ROOT_PATH="$SYSROOT/usr" \
    -DCMAKE_FIND_ROOT_PATH_MODE_LIBRARY=ONLY \
    -DCMAKE_FIND_ROOT_PATH_MODE_INCLUDE=ONLY \
    -DTEST_xcb_syslibs=TRUE \
    -Wno-dev \
 && cat config.summary \
 && cmake --build . \
 && cmake --install . \
 && rm -rf /work/build

RUN tar Jxf <(curl -L "https://download.qt.io/archive/qt/$(echo "$QT_VERSION" | grep -o '...')/$QT_VERSION/submodules/qttools-everywhere-src-$QT_VERSION.tar.xz") \
 && cd qttools-everywhere-src-* && mkdir _build && cd _build \
 && "$SYSROOT/opt/qt/bin/qt-configure-module" .. \
    -no-feature-assistant \
    -no-feature-designer \
    -no-feature-kmap2qmap \
    -no-feature-pixeltool \
    -no-feature-qdbus \
    -no-feature-qdoc \
    -no-feature-qev \
    -no-feature-qtattributionsscanner \
    -no-feature-qtdiag \
    -no-feature-qtplugininfo \
    -- \
    -DCMAKE_FIND_ROOT_PATH="$SYSROOT/usr" \
    -DCMAKE_FIND_ROOT_PATH_MODE_LIBRARY=ONLY \
    -DCMAKE_FIND_ROOT_PATH_MODE_INCLUDE=ONLY \
    -Wno-dev \
 && cmake --build . \
 && cmake --install . \
 && rm -rf /work/build

RUN tar Jxf <(curl -L "https://download.qt.io/archive/qt/$(echo "$QT_VERSION" | grep -o '...')/$QT_VERSION/submodules/qtsvg-everywhere-src-$QT_VERSION.tar.xz") \
 && cd qtsvg-everywhere-src-* && mkdir _build && cd _build \
 && "$SYSROOT/opt/qt/bin/qt-configure-module" .. \
    -- \
    -DCMAKE_FIND_ROOT_PATH="$SYSROOT/usr" \
    -DCMAKE_FIND_ROOT_PATH_MODE_LIBRARY=ONLY \
    -DCMAKE_FIND_ROOT_PATH_MODE_INCLUDE=ONLY \
    -Wno-dev \
 && cmake --build . \
 && cmake --install . \
 && rm -rf /work/build

RUN tar Jxf <(curl -L "https://download.qt.io/archive/qt/$(echo "$QT_VERSION" | grep -o '...')/$QT_VERSION/submodules/qtwayland-everywhere-src-$QT_VERSION.tar.xz") \
 && cd qtwayland-everywhere-src-* && mkdir _build && cd _build \
 && "$SYSROOT/opt/qt/bin/qt-configure-module" .. \
    -- \
    -DCMAKE_FIND_ROOT_PATH="$SYSROOT/usr" \
    -DCMAKE_FIND_ROOT_PATH_MODE_LIBRARY=ONLY \
    -DCMAKE_FIND_ROOT_PATH_MODE_INCLUDE=ONLY \
    -Wno-dev \
 && cmake --build . \
 && cmake --install . \
 && rm -rf /work/build \
 && ls "$SYSROOT/opt/qt/plugins/platforms/libqwayland-generic.a"

# Final image
FROM common

COPY --from=build-qt $SYSROOT $SYSROOT
COPY --from=build-ffmpeg $SYSROOT/usr $SYSROOT/usr
COPY --from=build-openal $SYSROOT/usr $SYSROOT/usr
COPY --from=build-toxcore $SYSROOT/usr $SYSROOT/usr

RUN chmod 0644 "$SYSROOT/static-toolchain.cmake"

RUN mv /usr/bin/clang++ /usr/bin/clang++.real
COPY clang-pc-fixer /usr/bin/clang++
RUN chmod 0755 /usr/bin/clang++

WORKDIR /qtox
ENV HOME=/qtox
