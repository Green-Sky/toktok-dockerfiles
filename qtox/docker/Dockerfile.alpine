FROM alpine:3.20

RUN ["apk", "add", \
 "bash", \
 "ccache", \
 "clang", \
 "cmake", \
 "compiler-rt", \
 "ffmpeg-dev", \
 "git", \
 "gzip", \
 "libexif-dev", \
 "libnotify-dev", \
 "libqrencode-dev", \
 "libsodium-dev", \
 "libvpx-dev", \
 "libxscrnsaver-dev", \
 "openal-soft-dev", \
 "opus-dev", \
 "qt6-qtbase-dev", \
 "qt6-qtsvg-dev", \
 "qt6-qttools", \
 "qt6-qttools-dev", \
 "samurai", \
 "sonnet-dev", \
 "sqlcipher-dev"]

ENV CC=clang CXX=clang++

WORKDIR /work/c-toxcore
RUN git clone --recurse-submodules --depth=1 https://github.com/TokTok/c-toxcore /work/c-toxcore \
 && cmake -B_build -H. -GNinja \
 && cmake --build _build --target install \
 && rm -rf /work/c-toxcore

WORKDIR /qtox
ENV HOME=/qtox
